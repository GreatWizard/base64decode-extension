{
  "manifest_version": 2,
  "name": "Base64 Decoder",
  "version": "0.1",
  "author": "arunpdl",
  "description": "Converts base64 encoded links and copies to clipboard and opens them in separate tab ",
  "background": {
    "scripts": ["background.js"]
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "icons": { "16": "icon.png", "48": "icon.png", "128": "icon.png" },
  "permissions": ["contextMenus", "clipboardWrite", "storage"]
}
